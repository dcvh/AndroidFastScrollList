<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"
    tools:context="com.example.cpu10661.fastscrolldemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fast_scroller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fast_scroller" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fast_scroller_intro" />

            <Button
                android:id="@+id/btn_fast_scroll_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/fast_scroll_rv" />

            <CheckBox
                android:id="@+id/cb_scroller_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/scroller_enabled" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fast_scroll_rv_intro" />

            <Button
                android:id="@+id/btn_default_fast_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/default_fast_scroll"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/without_bubble" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:layout_marginTop="32dp"
                android:text="@string/other_libraries"/>

            <Button
                android:id="@+id/btn_rv_fast_scroll_lib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/rv_fast_scroll_lib" />

            <Button
                android:id="@+id/btn_alphabet_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/alphabet_index_rv"/>

            <Button
                android:id="@+id/btn_recycler_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/recycler_bubble"/>

            <Button
                android:id="@+id/btn_recycler_fast_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_top"
                android:text="@string/recycler_fast_scroll"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/without_bubble" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_progress_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/loading_contacts" />

    <ProgressBar
        android:id="@+id/pb_indeterminate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:visibility="invisible"
        tools:targetApi="lollipop" />

</LinearLayout>
