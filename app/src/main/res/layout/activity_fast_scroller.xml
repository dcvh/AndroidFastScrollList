<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.cpu10661.fastscrolldemo.FastScroller.FastScrollerActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fast_scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.example.cpu10661.fastscrolldemo.FastScroller.FastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/rv_fast_scroller"
        app:layout_constraintTop_toTopOf="@id/rv_fast_scroller"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>